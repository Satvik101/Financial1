<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:paddingBottom="80dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Calculator"
                android:textSize="28sp"
                android:fontFamily="sans-serif-black"
                android:textColor="@color/text_primary" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnInfo"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:icon="@android:drawable/ic_menu_info_details"
                app:iconTint="@color/text_secondary"
                android:contentDescription="Info" />
        </LinearLayout>

        <!-- Input Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.FinCalc.Card"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Period Selection -->
                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipPeriod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:singleSelection="true"
                    app:selectionRequired="true">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipMonths"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Months" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipYears"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="Years" />
                </com.google.android.material.chip.ChipGroup>

                <!-- Configuration Fields -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilFrequency"
                    style="@style/Widget.FinCalc.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="Compounding Frequency">

                    <AutoCompleteTextView
                        android:id="@+id/actFrequency"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:padding="16dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilAgeGroup"
                    style="@style/Widget.FinCalc.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="Age Group">

                    <AutoCompleteTextView
                        android:id="@+id/actAgeGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:padding="16dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Dynamic Inputs (A-H) -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilA"
                    style="@style/Widget.FinCalc.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="Input A">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilB"
                    style="@style/Widget.FinCalc.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="Input B">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etB"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilC"
                    style="@style/Widget.FinCalc.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="Input C">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etC"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilD"
                    style="@style/Widget.FinCalc.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:visibility="gone"
                    android:hint="Input D">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etD"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilE"
                    style="@style/Widget.FinCalc.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:visibility="gone"
                    android:hint="Input E">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etE"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilF"
                    style="@style/Widget.FinCalc.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:visibility="gone"
                    android:hint="Input F">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etF"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilG"
                    style="@style/Widget.FinCalc.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:visibility="gone"
                    android:hint="Input G">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etG"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilH"
                    style="@style/Widget.FinCalc.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:visibility="gone"
                    android:hint="Input H">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etH"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Tip Controls Legacy -->
                <LinearLayout
                    android:id="@+id/layoutTipControls"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/tvTipValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tip: 15%"
                        style="@style/TextAppearance.FinCalc.Body"/>

                    <com.google.android.material.slider.Slider
                        android:id="@+id/sliderTip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:valueFrom="0"
                        android:valueTo="30"
                        android:value="15" />
                    
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnTip10"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10%"/>
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnTip15"
                            style="@style/Widget.Material3.Button.TonalButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="15%"/>
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnTip18"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="18%"/>
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnTip20"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="20%"/>
                    </LinearLayout>
                     <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnPeopleMinus"
                            style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:text="-"
                            android:textSize="20sp"/>

                        <TextView
                            android:id="@+id/tvPeople"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginHorizontal="16dp"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnPeoplePlus"
                            style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:text="+"
                            android:textSize="20sp"/>
                    </LinearLayout>

                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCalculate"
                    style="@style/Widget.FinCalc.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="Calculate" />
                
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchCompare"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Enable What-If Comparison" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnOpenCompare"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Open Comparison"
                    android:visibility="gone" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Results Section -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/primary"
            android:layout_marginBottom="24dp">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Amount"
                    android:textColor="#CCFFFFFF"
                    android:textSize="14sp"
                    android:textAllCaps="true"
                    android:letterSpacing="0.1" />

                <TextView
                    android:id="@+id/tvResult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹ 0"
                    android:textColor="@color/white"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"/>
                
                <TextView
                    android:id="@+id/tvBreakdown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#EEFFFFFF"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">
                    
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSave"
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:icon="@android:drawable/ic_menu_save"
                        app:iconTint="@color/white"
                        android:contentDescription="Save"/>
                    
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnShare"
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:icon="@android:drawable/ic_menu_share"
                        app:iconTint="@color/white"
                        android:contentDescription="Share"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnPdf"
                         style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:icon="@android:drawable/ic_menu_upload"
                        app:iconTint="@color/white"
                        android:contentDescription="PDF"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Charts & Table -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.FinCalc.Card"
            android:layout_marginBottom="16dp">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                     android:id="@+id/tvTableTitle"
                     style="@style/TextAppearance.FinCalc.Headline"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Analysis"
                     android:textSize="18sp"
                     android:layout_marginBottom="16dp"
                     android:visibility="gone"/>

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/pieChart"
                    android:layout_width="match_parent"
                    android:layout_height="250dp" 
                    android:layout_marginBottom="16dp"/>

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/lineChart"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginBottom="16dp" 
                    android:visibility="gone"/>

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/barChart"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginBottom="16dp" 
                    android:visibility="gone"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvTable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:nestedScrollingEnabled="false"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
