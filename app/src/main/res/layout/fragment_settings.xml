<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingTop="14dp"
        android:paddingBottom="72dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:fontFamily="sans-serif-medium"
            android:textSize="22sp"
            android:letterSpacing="-0.02"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="16dp"/>

        <!-- Premium Upsell Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="14dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/result_card_bg"
            app:strokeWidth="0dp"
            android:layout_marginBottom="18dp">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FinCalc Premium"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="17sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unlock advanced charts, ad-free experience, and cloud sync."
                    android:textColor="#CCFFFFFF"
                    android:textSize="13sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="14dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPremium"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:text="Upgrade Now"
                    android:textSize="13sp"
                    android:textColor="@color/primary"
                    android:backgroundTint="@color/white"
                    app:cornerRadius="10dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preferences"
            android:textColor="@color/text_secondary"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"/>

        <!-- Preferences Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.FinCalc.Card"
            android:layout_marginBottom="24dp">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Default Currency"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipCurrency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:singleSelection="true"
                    app:selectionRequired="true">
                    <com.google.android.material.chip.Chip android:id="@+id/chipInr" style="@style/Widget.Material3.Chip.Filter" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="₹ INR" />
                    <com.google.android.material.chip.Chip android:id="@+id/chipUsd" style="@style/Widget.Material3.Chip.Filter" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="$ USD" />
                    <com.google.android.material.chip.Chip android:id="@+id/chipEur" style="@style/Widget.Material3.Chip.Filter" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="€ EUR" />
                    <com.google.android.material.chip.Chip android:id="@+id/chipGbp" style="@style/Widget.Material3.Chip.Filter" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="£ GBP" />
                </com.google.android.material.chip.ChipGroup>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/surface_variant" android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="App Theme"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:singleSelection="true"
                    app:selectionRequired="true">
                    <com.google.android.material.chip.Chip android:id="@+id/chipThemeSystem" style="@style/Widget.Material3.Chip.Filter" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="System" />
                    <com.google.android.material.chip.Chip android:id="@+id/chipThemeLight" style="@style/Widget.Material3.Chip.Filter" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Light" />
                    <com.google.android.material.chip.Chip android:id="@+id/chipThemeDark" style="@style/Widget.Material3.Chip.Filter" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Dark" />
                </com.google.android.material.chip.ChipGroup>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/surface_variant" android:layout_marginBottom="16dp"/>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchIndianFormat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Use Indian Format (12,34,567)" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Support"
            android:textColor="@color/text_secondary"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"/>

        <com.google.android.material.card.MaterialCardView
             android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.FinCalc.Card">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                 <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRateApp"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rate on Play Store"
                    android:textAlignment="viewStart"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnShareApp"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Share App"
                    android:textAlignment="viewStart"/>

                <TextView
                    android:id="@+id/tvAbout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="FinCalc v1.0.0\nMade with ❤️"
                    android:gravity="center"
                    android:textColor="@color/text_hint"
                    android:textSize="12sp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
