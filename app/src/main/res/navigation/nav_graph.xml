<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.fincalc.app.feature.splash.SplashFragment"
        android:label="Splash">
        <action
            android:id="@+id/action_splash_to_home"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.fincalc.app.feature.home.HomeFragment"
        android:label="Home" />

    <fragment
        android:id="@+id/historyFragment"
        android:name="com.fincalc.app.feature.history.HistoryFragment"
        android:label="History" />

    <fragment
        android:id="@+id/goalsFragment"
        android:name="com.fincalc.app.feature.goals.GoalsFragment"
        android:label="Goals" />

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.fincalc.app.feature.settings.SettingsFragment"
        android:label="Settings" />

    <fragment
        android:id="@+id/calculatorFragment"
        android:name="com.fincalc.app.feature.calculator.CalculatorFragment"
        android:label="Calculator">
        <argument
            android:name="calculatorType"
            app:argType="string" />
        <argument
            android:name="prefillInputJson"
            app:argType="string"
            android:defaultValue="" />
    </fragment>

    <fragment
        android:id="@+id/compoundInterestFragment"
        android:name="com.fincalc.app.feature.calculator.compoundinterest.CompoundInterestFragment"
        android:label="Compound Interest">
        <argument android:name="prefillInputJson" app:argType="string" android:defaultValue="" />
    </fragment>

    <fragment
        android:id="@+id/sipFragment"
        android:name="com.fincalc.app.feature.calculator.sip.SipFragment"
        android:label="SIP">
        <argument android:name="prefillInputJson" app:argType="string" android:defaultValue="" />
    </fragment>

    <fragment
        android:id="@+id/stepUpSipFragment"
        android:name="com.fincalc.app.feature.calculator.stepupsip.StepUpSipFragment"
        android:label="Step-Up SIP">
        <argument android:name="prefillInputJson" app:argType="string" android:defaultValue="" />
    </fragment>

    <fragment
        android:id="@+id/sipLumpsumFragment"
        android:name="com.fincalc.app.feature.calculator.siplumpsum.SipLumpsumFragment"
        android:label="SIP + Lumpsum">
        <argument android:name="prefillInputJson" app:argType="string" android:defaultValue="" />
    </fragment>

    <fragment
        android:id="@+id/stepUpSipLumpsumFragment"
        android:name="com.fincalc.app.feature.calculator.stepupsiplumpsum.StepUpSipLumpsumFragment"
        android:label="Step-Up SIP + Lumpsum">
        <argument android:name="prefillInputJson" app:argType="string" android:defaultValue="" />
    </fragment>

    <fragment
        android:id="@+id/lumpsumFragment"
        android:name="com.fincalc.app.feature.calculator.lumpsum.LumpsumFragment"
        android:label="Lumpsum">
        <argument android:name="prefillInputJson" app:argType="string" android:defaultValue="" />
    </fragment>

    <fragment
        android:id="@+id/emiFragment"
        android:name="com.fincalc.app.feature.calculator.emi.EmiFragment"
        android:label="EMI">
        <argument android:name="prefillInputJson" app:argType="string" android:defaultValue="" />
    </fragment>

    <fragment
        android:id="@+id/loanComparisonFragment"
        android:name="com.fincalc.app.feature.calculator.loancomparison.LoanComparisonFragment"
        android:label="Loan Comparison">
        <argument android:name="prefillInputJson" app:argType="string" android:defaultValue="" />
    </fragment>

    <fragment
        android:id="@+id/savingsGoalFragment"
        android:name="com.fincalc.app.feature.calculator.savingsgoal.SavingsGoalFragment"
        android:label="Savings Goal">
        <argument android:name="prefillInputJson" app:argType="string" android:defaultValue="" />
    </fragment>

    <fragment
        android:id="@+id/tipSplitFragment"
        android:name="com.fincalc.app.feature.calculator.tipsplit.TipSplitFragment"
        android:label="Tip Split">
        <argument android:name="prefillInputJson" app:argType="string" android:defaultValue="" />
    </fragment>

    <fragment
        android:id="@+id/taxEstimatorFragment"
        android:name="com.fincalc.app.feature.calculator.taxestimator.TaxEstimatorFragment"
        android:label="Tax Estimator">
        <argument android:name="prefillInputJson" app:argType="string" android:defaultValue="" />
    </fragment>

    <fragment
        android:id="@+id/retirementFragment"
        android:name="com.fincalc.app.feature.calculator.retirement.RetirementFragment"
        android:label="Retirement Planner">
        <argument android:name="prefillInputJson" app:argType="string" android:defaultValue="" />
    </fragment>

    <fragment
        android:id="@+id/fireFragment"
        android:name="com.fincalc.app.feature.calculator.fire.FireFragment"
        android:label="FIRE Calculator">
        <argument android:name="prefillInputJson" app:argType="string" android:defaultValue="" />
    </fragment>

    <fragment
        android:id="@+id/inflationFragment"
        android:name="com.fincalc.app.feature.calculator.inflation.InflationFragment"
        android:label="Inflation Adjuster">
        <argument android:name="prefillInputJson" app:argType="string" android:defaultValue="" />
    </fragment>

    <fragment
        android:id="@+id/fdFragment"
        android:name="com.fincalc.app.feature.calculator.fd.FdFragment"
        android:label="FD Calculator">
        <argument android:name="prefillInputJson" app:argType="string" android:defaultValue="" />
    </fragment>

    <fragment
        android:id="@+id/ppfFragment"
        android:name="com.fincalc.app.feature.calculator.ppf.PpfFragment"
        android:label="PPF Calculator">
        <argument android:name="prefillInputJson" app:argType="string" android:defaultValue="" />
    </fragment>

    <fragment
        android:id="@+id/cagrFragment"
        android:name="com.fincalc.app.feature.calculator.cagr.CagrFragment"
        android:label="CAGR Calculator">
        <argument android:name="prefillInputJson" app:argType="string" android:defaultValue="" />
    </fragment>

    <fragment
        android:id="@+id/whatIfContainerFragment"
        android:name="com.fincalc.app.feature.calculator.whatif.WhatIfContainerFragment"
        android:label="What-If">
        <argument android:name="calculatorType" app:argType="string" android:defaultValue="SIP" />
    </fragment>

</navigation>
